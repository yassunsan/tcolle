<main>
  <div class="container">
    <div class="jumbotron">
      <div class="media d-flex align-items-center">
        <div class="float-left mr-3">
          <a href=<%= @user.uri %>>
            <img src=<%= @user.profile_image_uri %> class="img-fluid" width="48px" height="48px">
          </a>
        </div>
        <div class="align-self-center">
          <div><%= @user.name %></div>
          <div class="text-muted">@<%= @user.screen_name %></div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row no-gutters">
      <% @image_tweets.each do |image_tweet| %>
      <div class="col-2">
        <a href=<%=image_tweet[0] %>>
          <img src="<%= image_tweet[1] %>" class="img-trim img-fluid">
        </a>
      </div>
      <% end %>
    </div>
  </div>
  <div id="loadimg"></div>
</main>